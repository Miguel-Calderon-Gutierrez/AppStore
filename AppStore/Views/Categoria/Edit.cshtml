@model AppStore.Models.Domain.Categoria

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <h2>Actualizar Categoría</h2>

    <!-- Campo oculto para el ID -->
    <input type="hidden" asp-for="Id" />

    <!-- Campo para el nombre -->
    <div class="input-container">
        <label asp-for="Nombre">Nombre</label>
        <input type="text" class="input" asp-for="Nombre" />

        <!-- Mensaje de validación -->
        <div class="message-box error">
            <span asp-validation-for="Nombre"></span>
        </div>
    </div>

    <!-- Mensajes desde TempData -->
    @if (TempData["msg"] != null)
    {
        <div class="alert">
            @TempData["msg"]
        </div>
    }

    <!-- Botones -->
    <div class="input-container">
        <button class="btn" type="submit">Guardar</button>
        <a class="btn btn-sec" href="/Categoria/CategoriaList">Ver todas las categorías</a>
    </div>
</form>

