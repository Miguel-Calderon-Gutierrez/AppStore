@model AppStore.Models.Domain.Categoria
@{
}

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <h2>Agregar Categoría</h2>

    <!-- Contenedor del campo Nombre -->
    <div class="input-container">
        <label asp-for="Nombre">Nombre</label>
        <input type="text" class="input" asp-for="Nombre" />
        <!-- Mensaje de error -->
        <div class="message-box error">
            <span asp-validation-for="Nombre"></span>
        </div>
    </div>

    <!-- Alerta para mensajes del servidor -->
    @if (TempData["msg"] != null)
    {
        <div class="alert">
            @TempData["msg"]
        </div>
    }

    <!-- Botones -->
    <div class="input-container">
        <button class="btn" type="submit">Guardar</button>
        <a class="btn btn-sec" href="/Categoria/CategoriaList">Ver todas las categorías</a>
    </div>
</form>
