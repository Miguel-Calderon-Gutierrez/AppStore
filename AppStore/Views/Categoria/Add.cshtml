@model AppStore.Models.Domain.Categoria
@{
}

<form class="w-40" asp-action="Add" method="post" enctype="multipart/form-data">

    <h2>Agregar Categoria</h2>

    <div class="input-container">
        <label asp-for="Nombre" class="w-40">Nombre</label>
        <input type="text" class="input" asp-for="Nombre" />

        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Nombre"></span>
        </div>
    </div>


    @if (TempData["msg"] != null)
    {
        <div class="alert-mb1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Guardar</button>
        <a class="btn btn-sec" href="/Categoria/CategoriaList">Ver todas la categorias</a>
    </div>

</form>
